{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build PC",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"linux": {
				"command": "make"
			},
			"osx": {
				"command": "make"
			},
			"windows": {
				"command": "mingw32-make"
			},
			"args": [
				"PLATFORM=pc"
			]
		},
		{
			"label": "Clean",
			"command": "make",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"linux": {
				"command": "make"
			},
			"osx": {
				"command": "make"
			},
			"windows": {
				"command": "mingw32-make"
			},
			"args": [
				"clean"
			]
		},
	        {
			"label": "Clean & Re-Build PC",
			"dependsOn": [
				"Clean",
				"Build PC"
			],
			"dependsOrder": "sequence"
		},
	]
}
